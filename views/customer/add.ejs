<div class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Customer</h1>
</div>


<div class="col py-3">
    <div class="row">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
                    <li class="breadcrumb-item active">New Customer</li>
                </ol>
            </nav>
        </div>
    </div>
</div>


<form action="/add" method="POST">
    <div class="row form-group mb-4">
        <div class="col">
            <label for="firstName">Vardas</label>
            <input type="text" class="form-control" id="firstName" name="firstName" value="" placeholder="Jonas"
                required>
        </div>
        <div class="col">
            <label for="lastName">Pavardė</label>
            <input type="text" class="form-control" id="lastName" name="lastName" value="" placeholder="Jonaitis"
                required>
        </div>
        <div class="col">
            <label for="email">El. paštas</label>
            <input type="email" class="form-control" id="email" name="email" value="" placeholder="jonas@jonaitis.lt"
                required>
        </div>
        <div class="col">
            <label for="age">Amžius</label>
            <input type="number" class="form-control" id="age" name="age" value="" placeholder="19" required>
        </div>
    </div>
    <div class="row form-group mb-4">
        <button type="submit" class="btn btn-primary col-2">Add Customer</button>
    </div>
</form>