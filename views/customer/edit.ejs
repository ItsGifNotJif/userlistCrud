<div class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2"> Redaguojama <%= customer.firstName %>
            <%= customer.lastName %>
    </h1>
    <a href="/" class="btn btn-sm btn-outline-secondary">Grįžti į pagrindinį puslapį</a>
</div>


<div class="col py-3">
    <div class="row">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
                    <li class="breadcrumb-item active">
                        <%= customer.firstName %>
                            <%= customer.lastName %>
                    </li>
                </ol>
            </nav>
        </div>
        <div class="col text-end fw-lighter">
            <b>UserId:</b>
            <%= customer._id %>
        </div>
    </div>
</div>


<form action="/edit/<%= customer._id %>?_method=PUT" method="POST">

    <div class="row form-group mb-4">
        <div class="col">
            <label for="firstName">Vardas</label>
            <input type="text" class="form-control" id="firstName" name="firstName" value="<%= customer.firstName %>"
                placeholder="First Name" required>
        </div>

        <div class="col">
            <label for="lastName">Pavardė</label>
            <input type="text" class="form-control" id="lastName" name="lastName" value="<%= customer.lastName %>"
                placeholder="Last Name" required>
        </div>
    </div>

    <div class="row form-group mb-4">
        <div class="col">
            <label for="age">Amžius</label>
            <input type="number" class="form-control" id="age" name="age" value="<%= customer.age %>" placeholder="age"
                required>
        </div>

        <div class="col">
            <label for="email">El. Paštas</label>
            <input type="text" class="form-control" id="email" name="email" value="<%= customer.email %>"
                placeholder="Email" required>
        </div>
    </div>
    <div class="form-group mb-4">
        <button type="submit" class="btn btn-primary">Atnaujinti Duomenis</button>

        <button type="button" class="btn btn-danger" data-bs-toggle="modal" id="deleteButton"
            data-bs-target="#deleteModal">Ištrinti vartotoją</button>

    </div>

</form>


<div class="modal fade" tabindex="-1" role="dialog" id="deleteModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <div class="modal-title">Vartotojas bus ištrintas</div>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>
                    Vartotojas<b class="fw-bold">
                        <%= customer.firstName %>
                            <%= customer.lastName %>
                            bus ištrintas
                    </b><br />
                    Ar norite tęsti?
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Uždaryti</button>
                <form action="/edit/<%= customer._id %>?_method=DELETE" method="POST" class="position-relative">
                    <button type="submit" class="btn btn-primary">Taip, ištrinti vartotoją</button>
                </form>
            </div>
        </div>
    </div>
</div>